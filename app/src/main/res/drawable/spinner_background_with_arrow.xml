<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/spinner_background_with_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background with rounded corners and border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F7" />
            <stroke android:width="1dp" android:color="#CCCCCC" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Down arrow drawable aligned to right -->
    <item android:right="12dp" android:gravity="right|center_vertical">
        <bitmap
            android:src="@drawable/ic_down_arrow"
            android:gravity="center" />
    </item>

</layer-list>
