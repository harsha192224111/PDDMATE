<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#C8ECFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Title -->
        <TextView
            android:id="@+id/enrollmentCardCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDD01 - PDD for Android Development"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <!-- Row for Icon + Category -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/enrollmentCardIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_app_dev"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/enrollmentCardCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Development"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Mentor and Slots Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/enrollmentCardMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selvaraj"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/enrollmentCardSlotsLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/20 Slots Left"
                android:textSize="14sp"
                android:layout_marginStart="180dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Enroll Button -->
        <Button
            android:id="@+id/enrollButton"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:backgroundTint="#198CFF"
            android:text="@string/request_to_enroll"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <!-- Status (hidden by default) -->
        <TextView
            android:id="@+id/enrollmentCardStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
