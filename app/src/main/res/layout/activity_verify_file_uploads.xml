<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_ux_design"
            android:textColor="@color/title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/backArrow"
            app:layout_constraintTop_toTopOf="@id/backArrow"
            app:layout_constraintBottom_toBottomOf="@id/backArrow"
            android:layout_marginStart="16dp"/>

        <!-- Top Card for User Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/topCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card"
                android:orientation="vertical"
                android:padding="15dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/developer_icon"
                        android:src="@drawable/ic_person"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/developer_name"
                            android:textColor="@color/title"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/developer_id"
                            android:textColor="@color/subtitle"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/projectTitleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_title_prefix"
                    android:textColor="@color/title"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/time_icon"
                        android:src="@drawable/ic_time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/submitted_on"
                        android:textColor="@color/subtitle"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submitted Files Label -->
        <TextView
            android:id="@+id/submittedFilesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitted_files"
            android:textColor="@color/title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/topCard"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- FileCard1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fileCard1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/submittedFilesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/field_bg"
                android:padding="8dp"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/file_icon"
                    android:src="@drawable/ic_pdf"
                    />

                <TextView
                    android:id="@+id/fileName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/file1"
                    android:textColor="@color/title"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:id="@+id/downloadFile1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/download_icon"
                    android:src="@drawable/ic_download"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FileCard2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fileCard2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fileCard1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/field_bg"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/file_icon"
                    android:src="@drawable/ic_doc"
                    />

                <TextView
                    android:id="@+id/fileName2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/file2"
                    android:textColor="@color/title"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:id="@+id/downloadFile2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/download_icon"
                    android:src="@drawable/ic_download"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FileCard3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fileCard3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fileCard2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/field_bg"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/file_icon"
                    android:src="@drawable/ic_mp4"
                    />

                <TextView
                    android:id="@+id/fileName3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/file3"
                    android:textColor="@color/title"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>

                <ImageView
                    android:id="@+id/downloadFile3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="@string/download_icon"
                    android:src="@drawable/ic_download"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/fileCard3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:backgroundTint="@color/button_green"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/rejectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reject"
                android:textColor="@color/white"
                android:backgroundTint="@color/button_red"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
