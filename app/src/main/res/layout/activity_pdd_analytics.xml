<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="false"
    android:padding="@dimen/padding_16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".DashboardActivity">

        <!-- Top Stat Cards (2x2 grid) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Card 1: Total Students -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/light_green"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_12dp">

                    <TextView
                        android:id="@+id/tvTotalStudentsValue"
                        style="@style/DashboardStatValue"
                        android:text="@string/total_students_value" />

                    <TextView
                        style="@style/DashboardStatLabel"
                        android:text="@string/total_students_label" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Total Developers -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_12dp">

                    <TextView
                        android:id="@+id/tvTotalDevelopersValue"
                        style="@style/DashboardStatValue"
                        android:text="@string/total_developers_value" />

                    <TextView
                        style="@style/DashboardStatLabel"
                        android:text="@string/total_developers_label" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Completion Rate -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/light_purple"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_12dp">

                    <TextView
                        android:id="@+id/tvCompletionRateValue"
                        style="@style/DashboardStatValue"
                        android:text="@string/completion_rate_value" />

                    <TextView
                        style="@style/DashboardStatLabel"
                        android:text="@string/completion_rate_label" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4: Pending Reviews -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardBackgroundColor="@color/light_red"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_12dp">

                    <TextView
                        android:id="@+id/tvPendingReviewsValue"
                        style="@style/DashboardStatValue"
                        android:text="@string/pending_reviews_value" />

                    <TextView
                        style="@style/DashboardStatLabel"
                        android:text="@string/pending_reviews_label" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Charts Section -->
        <androidx.cardview.widget.CardView
            style="@style/DashboardChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_16dp">

                <TextView
                    style="@style/DashboardChartTitle"
                    android:text="@string/progress_trends_label" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height_large"
                    android:src="@drawable/progress_trends_chart"
                    android:contentDescription="@string/progress_trends_desc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/DashboardChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_16dp">

                <TextView
                    style="@style/DashboardChartTitle"
                    android:text="@string/milestone_performance_label" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height_large"
                    android:src="@drawable/milestone_performance_chart"
                    android:contentDescription="@string/milestone_performance_desc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/DashboardChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_16dp">

                <TextView
                    style="@style/DashboardChartTitle"
                    android:text="@string/student_progress_label" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height_small"
                    android:src="@drawable/student_progress_chart"
                    android:contentDescription="@string/student_progress_desc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/DashboardChartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_16dp">

                <TextView
                    style="@style/DashboardChartTitle"
                    android:text="@string/success_rate_label" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height_large"
                    android:src="@drawable/success_rate_chart"
                    android:contentDescription="@string/success_rate_desc" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
