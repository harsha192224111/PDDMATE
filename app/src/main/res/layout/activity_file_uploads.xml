<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_file_uploads.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idea_finalization"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_time"
                android:contentDescription="@string/deadline_icon"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadline_text"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_phase_documents"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/upload_section"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="#F2F6FB"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="@string/upload_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_your_files"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pdf_doc_video_files"
                android:textSize="12sp"
                android:textColor="#888"
                android:paddingTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/previous_uploads"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:textSize="16sp"
                android:textColor="#1877F2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/previous_uploads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_for_review"
            android:layout_marginTop="32dp"
            android:backgroundTint="#1877F2"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>
