<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    tools:context=".SupervisorDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pdd_program_overview"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="24dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <include layout="@layout/dashboard_metric_card"
                android:id="@+id/card_total_students"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <include layout="@layout/dashboard_metric_card"
                android:id="@+id/card_total_developers"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <include layout="@layout/dashboard_metric_card"
                android:id="@+id/card_completion_rate"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <include layout="@layout/dashboard_metric_card"
                android:id="@+id/card_pending_reviews"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <include layout="@layout/dashboard_metric_card"
                android:id="@+id/card_lagging_students"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enrollment_trends_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/enrollment_trends_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_product_enrollment_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/app_product_enrollment_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/milestone_performance_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/milestone_performance_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submission_status_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/success_rate_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_trend_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/progress_trend_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_product_completion_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/app_product_completion_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_product_approval_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="16dp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/app_product_approval_chart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginVertical="8dp" />

    </LinearLayout>
</ScrollView>