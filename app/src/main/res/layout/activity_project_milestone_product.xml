<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top bar -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_milestones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/title"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintTop_toTopOf="@id/backArrow"
        android:layout_marginStart="16dp" />

    <!-- Top Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/card_bg"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/project_title"
            android:textSize="14sp"
            android:textColor="@color/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Section Title -->
    <TextView
        android:id="@+id/sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_progress"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/topCard"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Timeline & Steps -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timelineContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Vertical Timeline -->
        <View
            android:id="@+id/verticalLine"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" />

        <!-- Step 1: Idea Selection -->
        <ImageView
            android:id="@+id/step1_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle_green"
            android:contentDescription="@string/desc_completed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step1_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step1_icon"
            app:layout_constraintTop_toTopOf="@id/step1_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idea_selection"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idea_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Step 2: 2D & 3D Modelling -->
        <ImageView
            android:id="@+id/step2_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle_green"
            android:contentDescription="@string/desc_completed"
            app:layout_constraintTop_toBottomOf="@id/step1_card"
            app:layout_constraintStart_toStartOf="@id/step1_icon"
            android:layout_marginTop="24dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step2_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step2_icon"
            app:layout_constraintTop_toTopOf="@id/step2_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modelling"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modelling_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Step 3: Prototype Development -->
        <ImageView
            android:id="@+id/step3_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle_green"
            android:contentDescription="@string/desc_completed"
            app:layout_constraintTop_toBottomOf="@id/step2_card"
            app:layout_constraintStart_toStartOf="@id/step2_icon"
            android:layout_marginTop="24dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step3_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step3_icon"
            app:layout_constraintTop_toTopOf="@id/step3_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prototype"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prototype_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Step 4: Validation & Testing -->
        <ImageView
            android:id="@+id/step4_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_error_red"
            android:contentDescription="@string/desc_error"
            app:layout_constraintTop_toBottomOf="@id/step3_card"
            app:layout_constraintStart_toStartOf="@id/step3_icon"
            android:layout_marginTop="24dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step4_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step4_icon"
            app:layout_constraintTop_toTopOf="@id/step4_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testing"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testing_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Step 5: Product Integration -->
        <ImageView
            android:id="@+id/step5_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pending_yellow"
            android:contentDescription="@string/desc_pending"
            app:layout_constraintTop_toBottomOf="@id/step4_card"
            app:layout_constraintStart_toStartOf="@id/step4_icon"
            android:layout_marginTop="24dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step5_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step5_icon"
            app:layout_constraintTop_toTopOf="@id/step5_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/integration"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/integration_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Step 6: Documentation -->
        <ImageView
            android:id="@+id/step6_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phase"
            android:contentDescription="@string/desc_pending"
            app:layout_constraintTop_toBottomOf="@id/step5_card"
            app:layout_constraintStart_toStartOf="@id/step5_icon"
            android:layout_marginTop="24dp"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/step6_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/step6_icon"
            app:layout_constraintTop_toTopOf="@id/step6_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documentation"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documentation_sub"
                android:textColor="@color/subtitle"
                android:textSize="14sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
