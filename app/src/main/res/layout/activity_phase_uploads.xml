<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idea_finalization"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/title"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintTop_toTopOf="@id/backArrow"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"/>

    <!-- Deadline -->
    <TextView
        android:id="@+id/deadlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phase_deadline"
        android:textSize="15sp"
        android:textColor="@color/subtitle"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <!-- Upload prompt -->
    <TextView
        android:id="@+id/uploadPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_phase_docs"
        android:textSize="15sp"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/deadlineText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <!-- Upload Box -->
    <LinearLayout
        android:id="@+id/uploadBox"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_upload_box"
        app:layout_constraintTop_toBottomOf="@id/uploadPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/uploadIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_upload_cloud"
            android:contentDescription="@string/upload_icon"
            />

        <TextView
            android:id="@+id/uploadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_files"
            android:textSize="16sp"
            android:textColor="@color/title"
            android:paddingTop="8dp"
            />

        <TextView
            android:id="@+id/uploadNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_formats"
            android:textSize="13sp"
            android:textColor="@color/subtitle"
            android:paddingTop="2dp"/>
    </LinearLayout>

    <!-- Previous Uploads Title -->
    <TextView
        android:id="@+id/prevUploadsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_uploads"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/uploadBox"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"/>

    <!-- Previous Uploads List -->
    <LinearLayout
        android:id="@+id/uploadsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/prevUploadsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp">

        <!-- Example file 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_file_item"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file_pdf"
                android:contentDescription="@string/file_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Research_Report.pdf"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Example file 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_file_item"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file_doc"
                android:contentDescription="@string/file_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Literature_Review.docx"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Example file 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_file_item"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file_video"
                android:contentDescription="@string/file_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presentation.mp4"
                android:textColor="@color/title"
                android:textSize="14sp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/submit_review"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/uploadsList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
