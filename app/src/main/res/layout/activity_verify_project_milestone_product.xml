<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/project_milestones"
            android:textColor="@color/title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/backArrow"
            app:layout_constraintTop_toTopOf="@id/backArrow" />

        <androidx.cardview.widget.CardView
            android:id="@+id/topCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/pddTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/project_title_pdd"
                    android:textColor="@color/title"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/developerInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pddTitle">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/developer_icon"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/studentNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Name"
                            android:textColor="@color/title"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/studentIdTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registration No"
                            android:textColor="@color/subtitle"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/project_progress"
            android:textColor="@color/title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topCard" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timelineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sectionTitle">

            <View
                android:id="@+id/timelineLine"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_marginStart="28dp"
                android:background="@color/line_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/step0_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step0_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step0_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step0_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step0_card"
                app:layout_constraintEnd_toStartOf="@id/step0_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step0_card" />

            <androidx.cardview.widget.CardView
                android:id="@+id/step1_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toBottomOf="@id/step0_card">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step1_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step1_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step1_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step1_card"
                app:layout_constraintEnd_toStartOf="@id/step1_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step1_card" />
            <androidx.cardview.widget.CardView
                android:id="@+id/step2_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toBottomOf="@id/step1_card">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step2_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step2_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step2_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step2_card"
                app:layout_constraintEnd_toStartOf="@id/step2_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step2_card" />
            <androidx.cardview.widget.CardView
                android:id="@+id/step3_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toBottomOf="@id/step2_card">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step3_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step3_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step3_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step3_card"
                app:layout_constraintEnd_toStartOf="@id/step3_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step3_card" />

            <androidx.cardview.widget.CardView
                android:id="@+id/step4_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toBottomOf="@id/step3_card">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step4_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step4_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step4_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step4_card"
                app:layout_constraintEnd_toStartOf="@id/step4_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step4_card" />

            <androidx.cardview.widget.CardView
                android:id="@+id/step5_card"
                style="@style/MilestoneCardStyle"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timelineLine"
                app:layout_constraintTop_toBottomOf="@id/step4_card">

                <LinearLayout style="@style/MilestoneContentLayout">

                    <TextView
                        style="@style/MilestoneTitleStyle"
                        android:text="@string/step5_title_prod" />

                    <TextView
                        style="@style/MilestoneDescStyle"
                        android:text="@string/step5_desc_prod" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/step5_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/step_status_icon"
                android:src="@drawable/ic_phase"
                app:layout_constraintBottom_toBottomOf="@id/step5_card"
                app:layout_constraintEnd_toStartOf="@id/step5_card"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/step5_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>